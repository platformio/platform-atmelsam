{
  "build": {
    "core": "samd",
    "cpu": "cortex-m0plus",
    "extra_flags": "-DARDUINO_SAMD_MKR1000 -DARDUINO_ARCH_SAMD -D__SAMD21G18A__ -DUSE_ARDUINO_MKR_PIN_LAYOUT",
    "f_cpu": "48000000L",
    "hwids": [
      [
        "0x2341",
        "0x804E"
      ],
      [
        "0x2341",
        "0x004E"
      ],
      [
        "0x2341",
        "0x824E"
      ],
      [
        "0x2341",
        "0x024E"
      ]
    ],
    "ldscript": "flash_with_bootloader.ld",
    "mcu": "samd21g18a",
    "usb_product": "Arduino MKR1000",
    "variant": "mkr1000"
  },
  "connectivity": [
    "wifi"
  ],
  "debug": {
    "jlink_device": "ATSAMD21G18",
    "openocd_chipname": "at91samd21g18",
    "openocd_target": "at91samdXX",
    "svd_path": "ATSAMD21G18A.svd"
  },
  "frameworks": [
    "arduino",
    "cmsis"
  ],
  "name": "Arduino MKR1000",
  "upload": {
    "disable_flushing": true,
    "maximum_ram_size": 32768,
    "maximum_size": 262144,
    "native_usb": true,
    "offset_address": "0x2000",
    "protocol": "sam-ba",
    "protocols": [
      "sam-ba",
      "blackmagic",
      "jlink",
      "atmel-ice"
    ],
    "require_upload_port": true,
    "use_1200bps_touch": true,
    "wait_for_upload_port": true
  },
  "url": "https://www.arduino.cc/en/Main/ArduinoMKR1000",
  "vendor": "Arduino"
}
